@using JWT.Models

<div class="alert alert-secondary mt-4" role="alert">
    <strong>@Title</strong>&nbsp;@Subtitle
</div>
<div class="mb-1">
    <textarea class="form-control" id="tokenTextArea" rows="5">@Token?.Header</textarea>
    <textarea class="form-control" rows="10">@Token?.Payload</textarea>
    <textarea class="form-control" rows="4">@Token?.Signature</textarea>
</div>

@code {
    [CascadingParameter]
    protected Token Token { get; set; }

    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Subtitle { get; set; }
}