@using JWT.Models

<div class="alert alert-secondary mt-4" role="alert">
    <strong>@Title</strong>&nbsp;@Subtitle
</div>
<div class="mb-1">
    <textarea class="form-control token-output token-output-header" id="tokenTextArea" rows="5" disabled="">@Token?.Header</textarea>
    <textarea class="form-control token-output token-output-payload" rows="10" disabled>@Token?.Payload</textarea>
    <textarea class="form-control token-output token-output-signature" rows="4" disabled>@Token?.Signature</textarea>
</div>

@code {
    [Parameter]
    public string Title { get; set; }
    [Parameter]
    public string Subtitle { get; set; }
    [Parameter]
    public Token Token { get; set; }
}